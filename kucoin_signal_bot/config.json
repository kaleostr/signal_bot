{
  "name": "KuCoin Spot Signal Bot",
  "version": "0.1.3",
  "slug": "kucoin_signal_bot",
  "description": "KuCoin spot scanner + Telegram signals. Bias 1H → Setup 15m → Trigger 5m. Confirmations filter, fee-aware TP, optional spread.",
  "arch": [
    "aarch64",
    "amd64"
  ],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "options": {
    "telegram_token": "",
    "telegram_chat_id": "",
    "min_vol_24h_usd": 5000000,
    "cooldown_minutes": 20,
    "timezone": "Asia/Seoul",
    "symbols_quote": "USDT",
    "top_n_by_volume": 120,
    "min_confirms": 3,
    "taker_fee_bps": 10,
    "roundtrip_extra_buffer_bps": 5,
    "min_net_profit_bps": 10,
    "tp_levels_pct": [
      0.007,
      0.012,
      0.02
    ],
    "use_level1_spread": false
  },
  "schema": {
    "telegram_token": "str",
    "telegram_chat_id": "str",
    "min_vol_24h_usd": "int",
    "cooldown_minutes": "int",
    "timezone": "str",
    "symbols_quote": "str",
    "top_n_by_volume": "int",
    "min_confirms": "int",
    "taker_fee_bps": "int",
    "roundtrip_extra_buffer_bps": "int",
    "min_net_profit_bps": "int",
    "tp_levels_pct": [
      "float"
    ],
    "use_level1_spread": "bool"
  },
  "ingress": false,
  "webui": "http://[HOST]:[PORT:8080]",
  "ports": {
    "8080/tcp": 8080
  },
  "map": [
    "share:rw",
    "data:rw"
  ],
  "privileged": []
}